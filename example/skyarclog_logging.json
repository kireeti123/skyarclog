{
    "version": 1.0,
    "name": "Client App 1",
    "formatters": {
        "json": {
            "type": "json_formatter",
            "config": {
                "indent": 2,
                "sort_keys": true
            }
        }
    },
    "listeners": {
        "console": {
            "enabled": true,
            "format": "json",
            "colors": {
                "enabled": true,
                "DEBUG": "cyan",
                "INFO": "green",
                "WARNING": "yellow",
                "ERROR": "red",
                "CRITICAL": "red,bold"
            },
            "output": "stdout",
            "show_timestamp": true,
            "timestamp_format": "%Y-%m-%d %H:%M:%S.%f",
            "show_level": true,
            "show_thread": true,
            "show_process": true
        }
    },
    "loggers": {
        "root": {
            "level": "WARNING",
            "handlers": ["console"]
        }
    }
}