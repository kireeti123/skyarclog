{
    "version": "1.0",
    "name": "Azure Blob Storage Logging Example",
    "transformers": {
        "json": {
            "type": "json_formatter",
            "config": {
                "indent": 2,
                "sort_keys": true
            }
        }
    },
    "listeners": {
        "azure_blob": {
            "type": "azure_blob",
            "enabled": true,
            "connection_string": "${AZURE_STORAGE_CONNECTION_STRING}",
            "container_name": "application-logs",
            "blob_prefix": "logs/%Y/%m/%d/%H/",
            "blob_extension": ".json",
            "batch_size": 100,
            "flush_interval": 60,
            "retry": {
                "enabled": true,
                "max_retries": 3,
                "retry_interval": 1
            },
            "config": {
                "timestamp_format": "%Y-%m-%dT%H:%M:%S.%fZ",
                "include_timestamp": true,
                "include_level": true,
                "metadata": {
                    "application": "skyarclog-example",
                    "environment": "development"
                }
            }
        },
        "console": {
            "type": "console",
            "enabled": true,
            "config": {
                "colored": true,
                "colors": {
                    "DEBUG": "cyan",
                    "INFO": "green",
                    "WARNING": "yellow",
                    "ERROR": "red",
                    "CRITICAL": "red,bold"
                },
                "show_timestamp": true
            }
        }
    },
    "loggers": {
        "root": {
            "level": "DEBUG",
            "handlers": {
                "DEBUG": ["console"],
                "INFO": ["console"],
                "WARNING": ["azure_blob", "console"],
                "ERROR": ["azure_blob", "console"],
                "CRITICAL": ["azure_blob", "console"]
            }
        }
    }
}
