{
    "version": 1.0,
    "name": "Client App 1",
    "transformers": {
        "json": {
            "type": "json_formatter",
            "config": {
                "indent": 2,
                "sort_keys": true
            }
        },
        "sql": {
            "type": "sql_formatter",
            "config": {
                "date_format": "%Y-%m-%d %H:%M:%S.%f",
                "max_field_length": 4000
            }
        },
        "protobuf": {
            "type": "protobuf_transformer",
            "config": {
                "preserve_proto_field_names": true,
                "message_type": "LogMessage"
            }
        }
    },
    "listeners": {
        "console": {
            "enabled": true,
            "format": "json",
            "colors": {
                "enabled": true,
                "DEBUG": "cyan",
                "INFO": "green",
                "WARNING": "yellow",
                "ERROR": "red",
                "CRITICAL": "red,bold"
            },
            "output": "stdout",
            "show_timestamp": true,
            "timestamp_format": "%Y-%m-%d %H:%M:%S.%f",
            "show_level": true,
            "show_thread": true,
            "show_process": true
        },
        "memory": {
            "enabled": true,
            "capacity": 1000,
            "flush_level": "ERROR",
            "target_handlers": ["console", "ms-sql"],
            "flush_on_capacity": true,
            "flush_interval": 60
        },
        "queue": {
            "enabled": true,
            "queue_size": 1000,
            "batch_size": 100,
            "flush_interval": 30,
            "worker_count": 2,
            "target_handlers": ["console"],
            "retry": {
                "enabled": true,
                "max_retries": 3,
                "retry_interval": 5
            }
        }
    },
    "loggers": {
        "root": {
            "level": "WARNING",
            "handlers": {
                "DEBUG": ["debug-listener"],
                "INFO": ["info-listener"],
                "WARNING": ["console"],
                "ERROR": ["error-listener", "alert-system"],
                "CRITICAL": ["critical-alert"]
            }
        },
        "app": {
            "level": "INFO",
            "handlers": ["console", "azure-blob"],
            "propagate": false,
            "qualname": "skyarclog.app"
        },
        "app.api": {
            "level": "INFO",
            "handlers": ["console", "azure-blob", "azure-appinsights"],
            "propagate": true,
            "qualname": "skyarclog.app.api"
        },
        "app.background": {
            "level": "DEBUG",
            "handlers": ["console", "azure-blob"],
            "propagate": true,
            "qualname": "skyarclog.app.background"
        },
        "app.security": {
            "level": "WARNING",
            "handlers": ["console", "azure-blob", "azure-appinsights"],
            "propagate": false,
            "qualname": "skyarclog.app.security"
        },
        "app.audit": {
            "level": "INFO",
            "handlers": ["azure-blob", "ms-sql"],
            "propagate": false,
            "qualname": "skyarclog.app.audit"
        }
    },
    "security": {
        "encryption": {
            "enabled": true,
            "type": "aes-gcm",
            "key_rotation_interval": "1d"
        },
        "signatures": {
            "enabled": true,
            "key_rotation_interval": "7d"
        },
        "validation": {
            "enabled": true,
            "chain_size": 1000,
            "export_interval": "30m",
            "export_path": "/var/log/your-app/chain.json"
        }
    }
}