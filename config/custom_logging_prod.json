{
    "version": 1.0,
    "name": "Production App",
    "listeners": {
        "console": {
            "enabled": true,
            "format": "json"
        },
        "file": {
            "path": "/var/log/skyarclog/app.log",
            "max_size": "1GB",
            "backup_count": 20
        },
        "azure-appinsights": {
            "format": "json",
            "instrumentation_key": "${AZURE_INSTRUMENTATION_KEY}"
        },
        "azure-blob": {
            "format": "json",
            "container_connection_string": "${AZURE_BLOB_CONNECTION_STRING}"
        },
        "ms-sql": {
            "format": "json",
            "connection_string": "${AZURE_SQL_CONNECTION_STRING}"
        }
    },
    "loggers": {
        "root": {
            "level": ["INFO"],
            "handlers": ["console", "azure-blob"]
        },
        "informational": {
            "level": ["DEBUG"],
            "handlers": ["console", "azure-blob"]
        },
        "critical": {
            "level": ["ERROR", "CRITICAL"],
            "handlers": ["azure-blob", "azure-appinsights", "ms-sql"]
        }
    },
    "security": {
        "encryption": {
            "enabled": true,
            "type": "aes-gcm",
            "key_rotation_interval": "1d"
        },
        "signatures": {
            "enabled": true,
            "key_rotation_interval": "7d"
        },
        "validation": {
            "enabled": true,
            "chain_size": 1000,
            "export_interval": "30m",
            "export_path": "/var/log/skyarclog/chain.json"
        }
    }
}
